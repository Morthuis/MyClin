
    <header>
      <%= render "shared/navbar" %>
    </header>

<div class="container">
<H2>Hi <%=@medico.name%>, In this table you will find a list with all your reports</H2>
<%= link_to "Create new report", new_medico_report_path(current_medico), class:"navbar-btn-yellow br"%>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Report ID</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |b| %>
      <tr>
          <th scope="row"> <%= b.id %> </th>
          <td>   <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#<%=b.id%>" aria-expanded="false" aria-controls="<%=b.id%>">
    Daily report created on <%= b.fecha %> <%= b.fecha %>
  </button>
  <div class="collapse" id="<%=b.id%>">
  <div class="card card-body">
    <%=b.resumen_del_dia%>
  </div>
</div>
  </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
